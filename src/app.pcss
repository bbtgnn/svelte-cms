/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

.link {
	@apply cursor-pointer text-blue-600 underline hover:text-blue-400;
}

.button {
	@apply inline-block rounded-xl bg-blue-500 p-4 text-white;
}

h1 {
	@apply text-3xl;
}

h2 {
	@apply text-xl font-medium;
}
